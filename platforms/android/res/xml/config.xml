<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kmenier.AppCOIN" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>COnvention INoubliable 2015</name>
    <description>
        Une application pour la COnvention INoubliable lilloise, codée par Konwhald :3, sous licence GPL-3.0
        Ne manquez rien des évènements de la journée !

        
    </description>
    <author email="kilian.menier@gmx.com" href="http://www.taverne-oubliee.com/">
        Konwhald
    </author>
    <content src="index.html" />
    <icon src="coin.png" />
    <preference name="SplashScreen" value="splash.png" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
